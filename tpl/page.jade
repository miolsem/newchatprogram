html
	head
		title= "BellyChat"
		script(src='/chat.js')
		script(src='/socket.io/socket.io.js')
		include bootstrap.min.css
		include style.css
	body

		.container
			.row
				.span9
					h1
						| BellyChat
			.row
				#chatbox.span9
